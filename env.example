############################################
# BOT SETTINGS
############################################

# Nombre visible del bot LXMF
BOT_NAME=WebhookBot

# Icono LXMFy (nombre de icono de la librería)
BOT_ICON=robot

# Colores del icono (hex RGB sin "#")
ICON_FG_COLOR=ffffff
ICON_BG_COLOR=2563eb


############################################
# CONNECTION TO N8N
############################################

# URL del webhook de n8n (obligatorio)
WEBHOOK_URL=https://tu-n8n.tld/webhook/lxmf

# Timeout en segundos para la llamada al webhook
WEBHOOK_TIMEOUT=300


############################################
# SECURITY / SIGNATURES
############################################

# Verificación de firmas LXMF (true/false)
SIGNATURE_VERIFICATION_ENABLED=false

# Requerir que todos los mensajes estén firmados (true/false)
REQUIRE_MESSAGE_SIGNATURES=false


############################################
# ADMINS (opcional)
############################################

# Lista de admins separados por comas (LXMF hashes)
LXMF_ADMINS=


############################################
# SYSTEM / ENV MISC
############################################

# Operador del bot (para /about)
BOT_OPERATOR=Anonymous Operator
